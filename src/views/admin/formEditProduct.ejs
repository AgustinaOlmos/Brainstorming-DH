<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head.ejs') %>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/css/formEditProduct.css">
</head>

<body>
    <%- include('../partials/header.ejs') %>

        <div id="container-brain">
            <h1 class="title-brain">&bull; Brainstorming &bull;</h1>
            <div class="underline"></div>
            <div class="icon_wrapper">
                <img class="icon-copas" src="/img/vectors/copas.png" alt="copas">
            </div>

            <form action="/products/<%= product.id %>/edit-product?_method=PUT" method="POST" id="form-create">
                <div class="name-prod">
                    <label for="title"></label>
                    <input type="text" name="title" id="title" value="<%= product.title %>">
                </div>
                <div class="img-prod">
                    <label for="img"></label>
                    <img src="<%=product.img %>" alt="img del producto" class="img-edit"/>
                    <input type="file" name="img" id="img" accept=".jpg" multiple>
                </div>
                <div class="price-prod">
                    <label for="price"></label>
                    <input type="number" name="price" id="price" value=<%=product.price %>>
                </div>
                <div class="promo-prod">
                    <label for="promotion"></label>
                    <select name="promotion" id="promotion">
                        <% if (product.promotion==1 ) { %>
                            <option value=1>Con Promoci贸n</option>
                            <option value=0>Sin Promoci贸n</option>
                            <% } else { %>
                            <option value=0>Sin Promoci贸n</option>
                            <option value=1>Con Promoci贸n</option>
                        <% } %>
                    </select>
                </div>
                <div class="discount-prod">
                    <label for="discount"></label>
                    <input type="number" name="discount" id="discount" value="<%= product.discount %>"
                    placeholder="% de Descuento">
                </div>
                <div class="categ-prod">
                    <label for="category"></label>
                    <select name="category" id="category">
                        <% for(category of categories) { %>
                            <option value=<%= category.id %>>
                                <%= category.name %>
                            </option>
                            <% }%>
                    </select>
                </div>
                <div class="subcateg-prod">
                    <label for="subcategory"></label>
                    <select name="subcategory" id="subcategory">
                        <% for(subcategory of subCategories) { %>
                            <option value=<%= subcategory.id %>>
                                <%= subcategory.name %>
                            </option>
                            <% }%>
                        </select>
                    </div>                    
                    
                    <!--  <div class="stock-prod">
                        <label for="stock"></label>
                        <input type="number" name="stock" id="stock" placeholder="Stock">
                    </div> -->
                    <!--             <div class="code-prod">
                    <label for="code"></label>
                    <input type="number" name="code" id="code" placeholder="Codigo de Barra">
                </div> -->
                    <!-- <div class="description-prod">
                        <label for="description"></label>
                        <textarea name="description" id="description"
                        placeholder="Descripcion del Producto"></textarea>
                    </div> -->
                    <div class="submit-prod">
                    <input type="submit" value="Editar Producto" id="form_button" />
                </div>
            </form>
        </div>

        <%- include('../partials/footer') %>
            <script src="/js/main.js"></script>
</body>

</html>