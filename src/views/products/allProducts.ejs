<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <%- include('../partials/header.ejs') %>

        <form class="form-search" action="#" method="POST">
            <div class="span-btn">
                <input type="text" name="search-input" class="search-input" placeholder="BUSCAR">
                <button class="search-btn" type="submit"><i class="fas fa-search"></i></button>
            </div>
        </form>
        <main class="main-products">
            <h1 class="main-title">En Promoci√≥n</h1>
            <section>
                <% for(product of products){ %>
                    <% if (product.promotion=="sale" ) { %>
                        <article class="card-product">
                            <a href="details/<%= product.id %>" id="card-link">
                                <img src=<%=product.img %> alt="" />
                                <h3 class="title-product">
                                    <%= product.title %>
                                </h3>
                                <div class="container-infoProd">
                                    <p class="price">$<%= product.price %>
                                    </p>
                                    <input type="text" name="count" class="count" pattern="[0-9]" value="1" />
                                    <div class="icon-bag">
                                        <p>AGREGAR</p>
                                        <i class="fas fa-shopping-bag"></i>
                                    </div>
                                </div>
                            </a>
                        </article>
                    <% } %>
                <% } %>
            </section>
            <h1 class="main-title">Todos los Productos</h1>
            <section>
                <% for(product of products){ %>
                    <% if (product.promotion=="no-sale" ) { %>
                        <article class="card-product">
                            <a href="details/<%= product.id %>" id="card-link">
                                <img src=<%=product.img %> alt="" />
                                <h3 class="title-product">
                                    <%= product.title %>
                                </h3>
                                <div class="container-infoProd">
                                    <p class="price">$<%= product.price %>
                                    </p>
                                    <input type="text" name="count" class="count" pattern="[0-9]" value="1" />
                                    <div class="icon-bag">
                                        <p>AGREGAR</p>
                                        <i class="fas fa-shopping-bag"></i>
                                    </div>
                                </div>
                            </a>
                        </article>
                    <% } %>
                <% } %>
            </section>
        </main>

        <%- include('../partials/footer') %>
    <script src="/js/main.js"></script>
</body>

</html>