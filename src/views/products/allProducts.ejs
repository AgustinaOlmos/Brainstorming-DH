<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <%- include('../partials/header.ejs') %>

    <%- include('../partials/scrollUp.ejs') %> 

        <form class="form-search" action="#" method="POST">
            <div class="box-title">
                <h1 class="title-promotion">En Promoción</h1>
            </div>
            <div class="span-btn">
                    <input type="text" name="search-input" class="search-input" placeholder="BUSCAR">
                    <button class="search-btn" type="submit"><i class="fas fa-search"></i></button>
            </div>
        </form>
        <main class="main-products">
            <h1 class="main-title">En Promoción</h1><br><br><br><br>
            <section>
                <% for(product of products){ %>
                    <% if (product.promotion == 1) { %>
                        <article class="card-product">
                            <a href="details/<%= product.id %>" id="card-link">
                                <img src=<%=product.img %> alt="" />
                                <h3 class="title-product">
                                    <%= product.title %>
                                </h3>
                                <div class="container-infoProd">
                                    <% if (product.discount > 0) { %>
                                        <p class="price-old">$<%= product.price %></p>
                                    <% } %>
                                    <p class="price">$<%= (product.price - (product.price * (product.discount * 0.01))) %>
                                    <div class="icon-bag">
                                        <p>AGREGAR</p>
                                        <i class="fas fa-shopping-bag"></i>
                                    </div>
                                </div>
                            </a>
                            <% if (product.discount > 0) { %>
                                <div class="discount">
                                    <span><%= product.discount %>% OFF</span>
                                    <span>$ <%= (product.price - (product.price * (product.discount * 0.01))) %></span>
                                </div>
                            <% } %>
                        </article>
                    <% } %>
                <% } %>
            </section>
            <h1 class="main-title2">Todos los Productos</h1><br><br><br><br>
            <section>
                <% for(product of products){ %>
                    <% if (product.promotion == 0) { %>
                        <article class="card-product">
                            <a href="details/<%= product.id %>" id="card-link">
                                <img src=<%=product.img %> alt="" />
                                <h3 class="title-product">
                                    <%= product.title %>
                                </h3>
                                <div class="container-infoProd">
                                    <p class="price">$<%= product.price %>
                                    </p>
                                    <div class="icon-bag">
                                        <p>AGREGAR</p>
                                        <i class="fas fa-shopping-bag"></i>
                                    </div>
                                </div>
                            </a>
                        </article>
                    <% } %>
                <% } %>
                
            </section>
        </main>

        <%- include('../partials/footer') %>
            <script src="/js/main.js"></script>
            <script src="/js/scrollUp.js"></script>
</body>

</html>