<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head.ejs') %>
        <link rel="stylesheet" href="/css/bannerToFive.css" />
        <link rel="stylesheet" href="/css/lightslider.css">
        <!-- Jquery -->
        <script type="text/javascript" src="/js/jquery.min.js"></script>
        <script type="text/javascript" src="/js/lightslider.js"></script>
</head>

<body>
    <%- include('../partials/header.ejs') %>

        <%- include('../partials/scrollUp.ejs') %>

            <div class="container-slider">
                <ul id="autoplay" class="cs-hidden">
                    <li class="item-a">
                        <img id="logo-slider1" src="" />
                    </li>
                    <li class="item-b">
                        <img id="logo-slider2" src="" />
                    </li>
                    <li class="item-c">
                        <img id="logo-slider3" src="" />
                    </li>
                    <li class="item-d">
                        <img id="logo-slider4" src="" />
                    </li>
                </ul>
            </div>

            <form 
                class="form-search" 
                action="/products/search/" 
                method="POST"
            >
                <h1 class="main-title3">Top 5 mejores ofertas</h1>
                <div class="span-btn">
                    <input type="text" name="searchProduct" class="search-input" placeholder="BUSCAR">
                    <button class="search-btn" type="submit"><i class="fas fa-search"></i></button>
                </div>
            </form>
            
            <main class="main-products">
                <section>
                    <% for(product of products){ %>
                        <article class="card-product">
                            <a href="/products/details/<%= product.id %>" id="card-link">
                                <img src="/img/products/<%= product.img %>" alt="" />
                                <h3 class="title-product">
                                    <%= product.title %>
                                </h3>
                                <div class="container-infoProd">
                                    <% if (product.discount> 0) { %>
                                        <p class="price-old">$<%= product.price %>
                                        </p>
                                    <% } %>
                                    <p class="price">$<%= (product.price - (product.price * (product.discount * 0.01))).toFixed(2) %>
                                    <div class="icon-bag">
                                        <p>AGREGAR</p>
                                        <i class="fas fa-shopping-bag"></i>
                                    </div>
                                </div>
                            </a>
                            <% if (product.discount> 0) { %>
                                <div class="discount">
                                    <span>
                                        <%= product.discount %>% OFF
                                    </span>
                                    <span>$ <%= (product.price - (product.price * (product.discount * 0.01))) %></span>
                                </div>
                            <% } %>
                        </article>
                    <% } %>
                </section>
            </main>

            <%- include('../partials/footer') %>
                <script src="/js/main.js"></script>
                <script src="/js/script.js" type="text/javascript"></script>
                <script src="/js/scrollUp.js"></script>
                <script src="/js/bannerToFive.js"></script>

</body>

</html>